class Lamp:
    number_Of_Lamps_Purchased = 3

    def __init__(self, type="led", power_In_Watts=3,
                 the_Number_Of_Diode_Lamps=1, the_Name_Of_The_Manufacturer="Rexel",
                 attachment_Type="on the surface", The_Color_Of_The_Ceiling="white", producing_Country="China"):
        self.type = type
        self.power = power_In_Watts
        self.number = the_Number_Of_Diode_Lamps
        self.name = the_Name_Of_The_Manufacturer
        self.attachment = attachment_Type
        self.color = The_Color_Of_The_Ceiling
        self.country = producing_Country

    def __del__(self):
        print("Delete", self.type)
        print("Delete", self.country)

    def __str__(self):
        return ("type: " + self.type + ", power: "
                + str(self.power) + ", the_Number_Of_Diode_Lamps: "
                + str(self.number) + ", the_Name_Of_The_Manufacturer: "
                + self.name + ", attachment_Type: " + self.attachment
                + ", color:" + self.color
                + ", country: " + self.country)

    @staticmethod
    def number_Of_Lamps_Purchased(number_Of_Lamps_Purchased):
        Lamp.number_Of_Lamps_Purchased += number_Of_Lamps_Purchased
        return Lamp.number_Of_Lamps_Purchased

x = Lamp("led", 3, 1, "Rexel", "on the surface", "white", "China")
y = Lamp()
z = Lamp()
print(x)
print(y)
print(z)
print(Lamp.number_Of_Lamps_Purchased)